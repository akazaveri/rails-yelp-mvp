<div class="container mt-5">
  <div class="d-flex flex-row align-items-center">
    <h1 class="mb-4">All restaurants</h1>
    <p class="ms-4"><%= link_to "Add +", new_restaurant_path, class: "btn btn-primary" %></p>
  </div>
  <div class="container p-0 mb-5">
    <% @restaurants.each do |restaurant| %>
      <div class="card p-3 mb-3">
        <h3><%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none" %></h3>
        <p><strong>Address: </strong><%= restaurant.address %></p>
        <p><strong>Phone Number: </strong><%= restaurant.phone_number %></p>
        <p class="m-0"><strong>Category: </strong><%= restaurant.category.capitalize %></p>
      </div>
    <% end %>
  </div>
</div>
