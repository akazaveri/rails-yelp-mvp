<div class="container mt-5">
  <h1>Add a new review</h1>
  <div>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <strong><%= f.input :rating, collection: Review::RATING %></strong>
      <strong><%= f.input :content %></strong>
      <%= f.submit class: "btn btn-primary"%>
    <% end %>
  </div>
  <%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-light mt-3 border border-secondary" %>
</div>
